<view class="slideLR clr" hover-class="none" hover-stop-propagation="false">
    <text class="slideLRName">热门作者</text>
    <navigator class="slideLRmenu " url="" hover-class="navigator-hover">查看全部 ></navigator>
    <scroll-view class="slideLRLoopBox clr" scroll-x="true">
        <view class="slideLRLoopWrap" wx:for="{{authorList}}" wx:key="index">
            <navigator url="/pages/author/author?author={{item.name}}" hover-class="navigator-hover">
                <view class="slideLRLoop clr">
                    <image class="slideLRLoopImg" src="{{item.touxiang}}"></image>
                    <view class="slideLRLoopText">{{item.name}}</view>
                    <view class="addLike iconfont icon-add" hover-class="none" hover-stop-propagation="false">
                        关注
                    </view>
                </view>
            </navigator>
        </view>
    </scroll-view>
</view>
