<view class="topThreeBox" hover-class="none" hover-stop-propagation="false">
    <view class="topTow" hover-class="none" hover-stop-propagation="false">
        <navigator class="" target="" url="/pages/author/author?author={{authorTop[1].name}}" hover-class="navigator-hover" open-type="navigate">
            <view class="topTowImgBox" hover-class="none" hover-stop-propagation="false">
                <image class="topTowImg" src="{{authorTop[1].touxiang}}" mode="aspectFit|aspectFill|widthFix" lazy-load="false" binderror="" bindload=""></image>
                <view class="topTowIcon iconfont icon-huangguan" hover-class="none" hover-stop-propagation="false"></view>
                <view class="topTowNumber" hover-class="none" hover-stop-propagation="false">
                    1
                </view>
            </view>
            <view class="topTowName" hover-class="none" hover-stop-propagation="false">
                {{authorTop[1].name}}
            </view>
            <view class="topTowFens" hover-class="none" hover-stop-propagation="false">
                {{authorTop[1].fens}} 粉丝
            </view>
        </navigator>
    </view>
