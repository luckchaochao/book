.money {
    margin: 0 50rpx;
    padding: 57rpx 48rpx;
    background-color: #2B323B;
    border-radius: 30rpx;
    margin-top: 50rpx;
}

.moneyHint {
    font-size: 48rpx;
    color: #75808D;
}
.moneyNumber{
    font-size: 128rpx;
